    "@tsconfig/node-lts": "^20.0.0",
    "@tsconfig/strictest": "^2.0.1",
    "@types/jest": "^29.1.2",
    "@types/node": "^18",
    "eslint": "^8.25.0",
    "eslint-plugin-jest": "^27.1.5",
    "jest": "^29.1.2",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.3",
    "tsx": "^3.12.7",
    "typescript": "^5.1"
  },
  "keywords": [
    "boilerplate",
    "nodejs",
    "nodejs-boilerplate",
    "scaffold",
    "starter",
    "template",
