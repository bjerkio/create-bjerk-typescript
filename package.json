{
  "name": "create-bjerk-typescript",
  "version": "4.1.0",
  "description": "Minimal typescript project template. Run yarn create bjerk-typescript <app name>",
  "license": "Apache-2.0",
  "author": "Bjerk AS",
  "repository": "github:bjerkio/create-bjerk-typescript",
  "type": "module",
  "bin": "./cmd/create-bjerk-typescript/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/main.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest) --coverage src/**/*"
  },
  "types": "./dist/main.d.ts",
  "dependencies": {
    "fs-extra": "^11.1.0"
  },
  "devDependencies": {
    "@bjerk/eslint-config": "^4.0.0",
    "@simenandre/prettier": "3.0.2",
    "@tsconfig/esm": "^1.0.3",
    "@tsconfig/node-lts": "^18.12.1",
    "@tsconfig/strictest": "^2.0.1",
    "@types/jest": "^29.1.2",
    "@types/node": "^18",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-unicorn": "^47.0.0",
    "jest": "^29.1.2",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4"
  },
  "keywords": [
    "boilerplate",
    "nodejs",
    "nodejs-boilerplate",
    "scaffold",
    "starter",
    "template",
    "typescript",
    "typescript-boilerplate"
  ],
  "engines": {
    "node": ">=18"
  },
  "eslintConfig": {
    "extends": [
      "@bjerk/eslint-config",
      "plugin:jest/recommended"
    ],
    "plugins": [
      "jest"
    ],
    "overrides": [
      {
        "files": "jest.config.*",
        "rules": {
          "import/no-default-export": "off"
        }
      }
    ]
  },
  "exports": "./dist/main.js",
  "packageManager": "yarn@3.6.0",
  "prettier": "@simenandre/prettier",
  "volta": {
    "node": "18.16.0",
    "yarn": "1.22.19"
  }
}
